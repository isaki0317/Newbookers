<!--個別のインスタンスを、notificationとして部分テンプレートで使用できる-->
<% visitor=notification.visitor %>
<% post=notification.book %>

<div class="user-view clearfix ">
  <%= link_to user_path(notification.visitor) do %>
    <%=  attachment_image_tag notification.visitor, :profile_image, :fill, 30, 30, class: "attachment user profile_image fallback img-circle avatar", fallback: "no_image.jpg", size:'30x30'%>
  <% end %>
  <%== notification_form(notification) %><span class="moderate-font"><%= " (#{time_ago_in_words(notification.created_at)}前)" %></span>
  <br>
  
</div>