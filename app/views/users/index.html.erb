<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>
      
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
      <% if @user == current_user %>
        <%= link_to edit_user_path(@user) do %>
          <i class="glyphicon glyphicon-wrench col-xs-12 btn btn-default"></i>
        <% end %>
      <% else %>
        <%= link_to user_path(current_user.id) do %>
          <i class="glyphicon glyphicon-wrench col-xs-12 btn btn-default"></i>
        <% end %>
      <% end %>
      </div>
      <!--部分テンプレ-->
      <h2>New Book</h2>
      <%= form_with model: @post_book, local: true do |f| %>
      <div class="field-row">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class:"form-control" %>
      </div>
      <div class="field-row">
        <label for="book_body">Opinion</label>
        <%= f.text_area :body, class:"form-control" %>
      </div>
      <div class="actions row">
        <%= f.submit "Create Book", class:"btn btn-primary col-xs-12" %>
      </div>
      <% end %>
      <!--ここまで-->
    </div>
    <div class="col-xs-9">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <th>
            <%= attachment_image_tag user, :profile_image, :fill, 40, 40, class: "attachment user profile_image fallback", fallback: "no_image.jpg", size:'40x40'%>
            </th>
            <th><%= user.name %></th>
            <th>Show</th>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
