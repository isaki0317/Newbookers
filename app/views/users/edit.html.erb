<div class="container">
    <h2>User info</h2>
    
    <%= form_with model:@user, local: true do |f| %>
    <div class="field">
        <label for="user_name">Name</label>
        <%= f.text_field :name %>
    </div>
    <div class="field">
        <label for="user_profile_image">Image</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    </div>
    <div class="field">
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction %>
    </div>
    <div class="actions">
         <%= f.submit "Update User" %>
    </div>
    <% end %>
</div>